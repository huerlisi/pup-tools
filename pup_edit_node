# Options
# =======
NODE=$1

PUPPET_PATH=${PUPPET_PATH:-/etc/puppet}
NODES_PATH=${NODES_PATH:-$PUPPET_PATH/manifests/nodes}

# Main
# ====
node_path=$NODES_PATH/$NODE.pp

pushd . >/dev/null
cd $PUPPET_PATH
	# Show what's new and record if something changed
	darcs whatsnew $node_path && darcs record $node_path

	# Open editor
	editor $node_path

	# Record changes
	darcs record $node_path
popd >/dev/null
