set -e

# Options
# =======
MODULE=$1

MODULES_PATH=${MODULES_PATH:-/etc/puppet/modules}

# Config File
PUP_CONF=${PUP_CONF:-/etc/puppet-tools/puppet-tools.conf}
source $PUP_CONF

if [ $# -lt 1 ] ; then
	echo "Usage: $(basename $0) <MODULE>"
	exit 2
fi

# Operations
# ==========
function get_module() {
local module=$1

	cd $MODULES_PATH/$module
	darcs get $MODULES_REPOSITORY/$module
}

# Main
# ====
pushd . >/dev/null
	get_module $MODULE
popd >/dev/null
