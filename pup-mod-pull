# Options
# =======
MODULES=${1:-$(pup-mod-ls)}

if [ "$1" == "--all" ]; then
	options="--all"
	shift
fi

MODULES_PATH=${MODULES_PATH:-/etc/puppet/modules}

# Main
# ====
pushd . >/dev/null
cd $MODULES_PATH
	for module in $MODULES ; do
		module_name=$(basename $module)
		echo "Module '$module_name':"

		pushd . >/dev/null
		cd $module
		        darcs pull $options
	        popd >/dev/null
        done
popd >/dev/null
