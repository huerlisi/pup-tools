set -e

# Options
# =======
NODE="${1%.pp}"

PUPPET_PATH=${PUPPET_PATH:-/etc/puppet}
NODES_PATH=${NODES_PATH:-$PUPPET_PATH/manifests/nodes}

if [ $# -lt 1 ] ; then
	echo "Usage: $(basename $0) <NODE>"
	exit 2
fi

# Main
# ====
node_path=$NODES_PATH/$NODE.pp

pushd . >/dev/null
cd $NODES_PATH
	# Show what's new and record if something changed
	darcs record $NODE.pp

	# Open editor
	rm $NODE.pp
	
	# Record changes
	darcs record $NODE.pp --patch-name "Remove node declaration '$NODE'"

	# Push records
	darcs push --all
popd >/dev/null
