set -e

# Options
# =======
MODULE=${1:-*}

MODULES_PATH=${MODULES_PATH:-/etc/puppet/modules}

# Main
# ====
module_dir=$MODULES_PATH/$MODULE

pushd . >/dev/null
cd $module_dir

	for module in $module_dir ; do
		module_name=$(basename $module)
		echo "Pruning '$module_name':"

		cd $module
			shopt -s nullglob
			rm -fv *~ DEADJOE
			shopt -u nullglob

	        echo
	        cd ..
        done
popd >/dev/null
