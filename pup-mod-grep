# Options
# =======
MODULES_PATH=${MODULES_PATH:-/etc/puppet/modules}
REGEXP="$1"
MODULE=${2:-$(pup-mod-ls)}

if [ $# -lt 1 ] ; then
	echo "Usage: $(basename $0) <REGEXP> [<MODULE>]"
	exit 2
fi

# Main
# ====
grep --recursive $REGEXP $MODULES_PATH | grep -v _darcs
