# Options
# =======
MODULES=${1:-$(pup-mod-ls)}

# Show only summary no module is given
if [ -n "$1" ]; then
	opt_sum="--no-sum"
fi

MODULES_PATH=${MODULES_PATH:-/etc/puppet/modules}

# Main
# ====
pushd . >/dev/null
cd $MODULES_PATH
	for module in $MODULES ; do
		module_name=$(basename $module)
		echo "Module '$module_name':"

		cd $module
	        darcs whatsnew --look-for-adds $opt_sum

	        echo
	        cd ..
        done
popd >/dev/null
